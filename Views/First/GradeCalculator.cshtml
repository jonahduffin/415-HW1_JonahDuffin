@{
}
@model GradeCalculatorModel

<h3>IS 413 Grading Calculator</h3>
<p>Enter each of your grades as a percentage with no % symbol, starting with integers. EX: 85.6 OR 0.03</p>
<form method="post">
    <label>Assignments Grade:</label>
    <input id="assignments" asp-for="Assignments"/>
    <br />
    <label>Group Project Grade:</label>
    <input id="groupproject" asp-for="GroupProjects"/>
    <br />
    <label>Quizzes Grade:</label>
    <input id="quizzes" asp-for="Quizzes"/>
    <br />
    <label>Exams Grade:</label>
    <input id="exams" asp-for="Exams"/>
    <br />
    <label>INTEX Grade:</label>
    <input id="intex" asp-for="Intex"/>
    <br />
    <a class="gradepercentage" id="gradepercentage">@ViewBag.Percentage</a>
    <br />
    <input type="submit" value="Calculate Grade" id="submitButton" name="submitButton"/>
    <div asp-validation-summary="All"></div>
</form>